@model MusicShop.Web.Models.UserLogin

@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
    ViewBag.Title = "Login";
}

<div class="account-pages mt-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card">

                    <div class="card-body p-4">

                        <div class="text-center w-75 m-auto">
                            <a href="index.html">
                                <span><img src="~/Content/img/logo-light.png" alt="" height="22"></span>
                            </a>
                            <p class="text-muted mb-4 mt-3">Enter your Credentials and password to access your account.</p>
                        </div>

                        @Html.ValidationSummary(true)
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group mb-3">
                                @Html.LabelFor(m => m.Email)
                                @Html.TextBoxFor(m => m.Email, new
                           {
                               placeholder = "Enter your username",
                               id = "username",
                               @class = "form-control",
                               type = "username"
                           })

                            </div>
                            <div class="form-group mb-3">
                                @Html.LabelFor(m => m.Password)
                                @Html.TextBoxFor(m => m.Password, new
                                {
                                    placeholder = "Enter your password",
                                    id = "parola",
                                    @class = "form-control",
                                    type = "password"
                                })
                            </div>
                            <div class="form-group mb-3">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="checkbox-signin" checked>
                                    <label class="custom-control-label" for="checkbox-signin">Remember me</label>
                                </div>
                            </div>
                            <div class="form-group mb-0 text-center">
                                <button class="btn btn-primary btn-block" type="submit"> Log In </button>
                            </div>
                            @*<div style="text-align:center">
                                    <button type="submit" class="btn btn-outline-dark">Submit</button>
                                    <a class="btn btn btn-outline-dark" href="@Url.Action("Index", "Register")" ">Register</a>
                                    <a class="btn btn btn-outline-dark" href="@Url.Action("Index", "Home")" ">Home</a>
                                </div>*@
                        }

                        <div class="text-center">
                            <h5 class="mt-3 text-muted">Sign in with</h5>
                            <ul class="social-list list-inline mt-3 mb-0">
                                <li class="list-inline-item">
                                    <a href="javascript: void(0);" class="social-list-item border-primary text-primary"><i class="mdi mdi-facebook"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="javascript: void(0);" class="social-list-item border-danger text-danger"><i class="mdi mdi-google"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="javascript: void(0);" class="social-list-item border-info text-info"><i class="mdi mdi-twitter"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="javascript: void(0);" class="social-list-item border-secondary text-secondary"><i class="mdi mdi-github-circle"></i></a>
                                </li>
                            </ul>
                        </div>

                    </div> <!-- end card-body -->
                </div>
                <!-- end card -->

                <div class="row mt-3">
                    <div class="col-12 text-center">
                        <p> <a href="pages-recoverpw.html" class="text-muted ml-1">Forgot your password?</a></p>
                        <p class="text-muted">Don't have an account? <a href="@Url.Action("Index", "Register")" class="text-primary font-weight-medium ml-1">Sign Up</a></p>
                    </div> <!-- end col -->
                </div>
                <!-- end row -->

            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>
<!-- end page -->


<footer class="footer footer-alt">
